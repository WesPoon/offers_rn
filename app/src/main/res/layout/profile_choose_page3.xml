<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:profile="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

 	<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:card_view="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/card_view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    card_view:cardBackgroundColor="@android:color/white"
	    card_view:cardCornerRadius="2dp"
	    card_view:cardElevation="2dp"
	    tools:context=".InternListActivity" >
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" > 	    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
		android:layout_marginLeft="15dp"
        android:text="@string/profile_choose_industries_context" />
    <com.offers_rn.profile.ChooseIndustrySpinner
        android:id="@+id/profile_choose_industries_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"  
        android:layout_marginTop="20dp"                
		profile:index="1" />
    <com.offers_rn.profile.ChooseIndustrySpinner
        android:id="@+id/profile_choose_industries_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"        
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"        
        profile:index="2" />
	</LinearLayout>
    </android.support.v7.widget.CardView>    
    

 	<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:card_view="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/card_view2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    card_view:cardBackgroundColor="@android:color/white"
	    card_view:cardCornerRadius="2dp"
	    card_view:cardElevation="2dp"
	    tools:context=".InternListActivity" >  	
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >  	
 	<TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="25dp"
		android:layout_marginLeft="15dp"
        android:text="@string/profile_choose_career_style_context" />
    
    <Spinner
        android:id="@+id/profile_choose_career_style_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"        
        android:layout_gravity="center" />
	</LinearLayout>	
	</android.support.v7.widget.CardView>
    
    <Button
        android:id="@+id/profile_choose_page3_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="right|center_vertical"
        android:text="@string/form_submit" />
    

</LinearLayout>